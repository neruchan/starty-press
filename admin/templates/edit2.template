<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link rel="stylesheet" href="css/common.css" type="text/css" />
<script type="text/javascript" src="../js/jquery-1.7.2.min.js"></script>
<title>TiARY Press (ティアリィプレス）　｜　管理画面</title>
<script>
$(function(){
	$("#update_btn").click(function(){
		$("#update_form").submit();
	});
});
</script>
<script type='text/javascript'>//<![CDATA[
	$(function(){
	    $(".propicunknown").css({"background-size":  "150px auto", "background-repeat": "no-repeat", "background-position": "center center", "background-image": "url(<#PRINT show_img#>)"});
    })

function onUpload(fileObj) {
    var file;

    if (fileObj.files) {
        file = fileObj.files[0];
        var fr = new FileReader;
        fr.onloadend = changeimg;
        fr.readAsDataURL(file)
    } else {
        file = fileObj.value;
        changeimg(file);
    }
}

function onbrowse() {
    document.getElementById('writer_img').click();
}

function changeimg(str) {
    if(typeof str === "object") {
        str = str.target.result; // file reader
    }

    $(".propicunknown").css({"background-size":  "150px auto", "background-repeat": "no-repeat", "background-position": "center center", "background-image": "url(" + str + ")"});
}
//]]>

</script>
</head>

<body>

<#INCLUDE header.template#>


<div id="container">

<#INCLUDE navigation.template#>

<div class="clearfix"></div>

<!--table of content start-->
<div id="title02">ライター管理画面</div>
<p class="border-btm"></p>
<form action="" method="post"  enctype="multipart/form-data" id="update_form" name="update_form">
<table width="930" border="0" cellspacing="2" cellpadding="3" id="center">
<tr>
<td width="110" class="title-tbl02">NO</td>
<td><#PRINT no#></td>
</tr>
<tr>
<td class="title-tbl02">ID</td>
<td><#PRINT wid#></td>
</tr>
<tr>
<td class="title-tbl02">画像</td>
<td class="pic"><div class="pic-wrap"><!--<img src="img/avatar.png" alt="" />--><input type="button" class="propicunknown" onclick="javascript:onbrowse()" /></div>   <input type="file" class="form03" name="writer_img" id="writer_img"  onchange="onUpload(this);"/></td>
</tr>
<tr>
<tr>
<td class="title-tbl02">ライター名</td>
<td><input type="text" class="form02" name="name" value="<#PRINT name#>"/></td>
</tr>
<#PRINT name_err#>
<tr>
<td class="title-tbl02">ローマ字</td>
<td><input type="text" class="form02" name="roma_name" value="<#PRINT roma_name#>"/></td>
</tr>
<tr>
<td class="title-tbl02">facebook</td>
<td class="link"><input type="text" class="form01" name="fb_url" value="<#PRINT fb_url#>"/></td>
</tr>
<tr>
<td class="title-tbl02">twitter</td>
<td class="link"><input type="text" class="form01" name="tw_url" value="<#PRINT tw_url#>"/></td>
</tr>
<tr>
<td class="title-tbl02">ブログ</td>
<td class="link"><input type="text" class="form01" name="blog_url" value="<#PRINT blog_url#>"/></td>
</tr>
<tr>
<td class="title-tbl02">投稿記事数</td>
<td><#PRINT access_num#></td>
</tr>
<tr>
<td class="title-tbl02">自己紹介</td>
<td>
<textarea class="form04b" rows="" cols="" name="introduce"><#PRINT introduce#></textarea></td>
</tr>
</table>
<input type="hidden" name="update_flag" value="update_flag" />
</form>
<div id="line" align="center">
<a href="javascript:void(0)" id="update_btn"><input type="button" class="space02" value="保存" /></a> &nbsp;
<a href="javascript:history.go(-1)"><input type="button" class="space02" value="もどる" /></a>
</div>

<!--end of table-->


</div>
</body>
</html>
